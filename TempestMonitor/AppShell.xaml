<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:pages="clr-namespace:TempestMonitor.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="MetMobile Weather"
    x:Class="TempestMonitor.AppShell"
>
    <FlyoutItem Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Live Station Readings" >
        <ShellContent
            Title="Live Station Readings"
            ContentTemplate="{DataTemplate pages:LiveStationReadingsPage}"
            Route="LiveStationReadingsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Application Settings">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:ApplicationSettingsPage}"
            Route="SettingsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Application Statistics">
        <ShellContent
            Title="Application Statistics"
            ContentTemplate="{DataTemplate pages:ApplicationStatisticsPage}"
            Route="ApplicationStatisticsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Daily Forecast">
        <ShellContent
            Title="Daily Forecast"
            ContentTemplate="{DataTemplate pages:DailyForecastPage}"
            Route="DailyForecastPage" />
    </FlyoutItem>

    <FlyoutItem Title="Forecast">
        <ShellContent
            Title="Forecast"
            ContentTemplate="{DataTemplate pages:ForecastPage}"
            Route="ForecastPage" />
    </FlyoutItem>

    <FlyoutItem Title="Hourly Forecast">
        <ShellContent
            Title="Hourly Forecast Dump"
            ContentTemplate="{DataTemplate pages:HourlyForecastPage}"
            Route="HourlyForecastPage" />
    </FlyoutItem>

    <FlyoutItem Title="History">
        <ShellContent
            Title="History Dump"
            ContentTemplate="{DataTemplate pages:HistoryPage}"
            Route="HistoryPage" />
    </FlyoutItem>
</Shell>
