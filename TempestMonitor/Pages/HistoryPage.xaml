<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"    
    xmlns:converters="clr-namespace:TempestMonitor.Views.Converters;assembly=TempestMonitor"
    x:Class="TempestMonitor.Pages.HistoryPage"
    Title="Hourly Observation History"
    xmlns:viewmodels="clr-namespace:TempestMonitor.ViewModels;assembly=TempestMonitor"
    xmlns:historymodels="clr-namespace:TempestMonitor.ViewModels.History;assembly=TempestMonitor"
    x:DataType="viewmodels:HistoryViewModel"
    >
    <ScrollView Orientation="Both"
	            BackgroundColor="{StaticResource PurpleVikings}">
        <ScrollView.Resources>
            <ResourceDictionary>
                <converters:RowIndexToColorConverter x:Key="RowIndexToColorConverter" />
            </ResourceDictionary>
        </ScrollView.Resources>
        <VerticalStackLayout>
            <CollectionView ItemsSource="{Binding HourlyObservationSummaries}">
                <CollectionView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            TextColor="{StaticResource GoldVikings}"
                            Text="Hours Ago" 
                            FontSize="Medium"
                            VerticalOptions="End"
                            HorizontalOptions="Start"
                        />
                        <Border
                            Grid.Column="1"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="High" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="15"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="{Binding Settings.TemperatureUnitSymbol, StringFormat='{0}'}"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="2"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="Low" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="15"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="{Binding Settings.TemperatureUnitSymbol, StringFormat='{0}'}"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="3"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="Gust" 
                                    FontSize="Micro"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="Micro"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="{Binding Settings.WindspeedUnitSymbol, StringFormat='{0}'}"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="4"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="W Dir" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="5"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="Rain" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="Micro"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="{Binding Settings.PrecipitationUnitSymbol, StringFormat='{0}'}"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="6"
                            StrokeThickness="1"
                        >
                            <Label
                                TextColor="{StaticResource GoldVikings}"
                                Text="Strikes" 
                                FontSize="Medium"
                                VerticalOptions="End"
                                HorizontalOptions="Start"
                            />
                        </Border>
                        <Border
                            Grid.Column="7"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="Dist" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="Micro"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="{Binding Settings.DistanceUnitSymbol, StringFormat='{0}'}"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="8"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="RH" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="Micro"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="%"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="9"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="Bat" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="Micro"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="{Binding Settings.BatteryUnitSymbol}"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="10"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="Ill" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="Micro"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="lux"
                                />
                            </HorizontalStackLayout>
                        </Border>
                        <Border
                            Grid.Column="11"
                            StrokeThickness="1"
                        >
                            <Label
                                TextColor="{StaticResource GoldVikings}"
                                Text="UV" 
                                FontSize="Medium"
                                VerticalOptions="End"
                                HorizontalOptions="Center"
                            />
                        </Border>
                        <Border
                            Grid.Column="12"
                            StrokeThickness="1"
                        >
                            <Label
                                TextColor="{StaticResource GoldVikings}"
                                Text="SR" 
                                FontSize="Medium"
                                VerticalOptions="End"
                                HorizontalOptions="Center"
                            />
                        </Border>
                        <Border
                            Grid.Column="13"
                            StrokeThickness="1"
                        >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    TextColor="{StaticResource GoldVikings}"
                                    Text="Press" 
                                    FontSize="Medium"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    FontSize="10"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start" 
                                    TextColor="{StaticResource GoldVikings}"                    
                                    Text="{Binding Settings.PressureUnitSymbol}"
                                />
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type historymodels:HourlyObservationSummary}">
                        <Grid
                                Margin="0,0,0,0"
                                Padding="0,0,0,0"
                            >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="115"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding HoursBack, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="1"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding MaximumTemperature, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="2"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding MinimumTemperature, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="3"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding MaximumWindGust, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="4"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AverageWindDirectionShortCardinal, StringFormat='{0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="5"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding RainAccumulationDuringHour, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="6"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding LightningStrikesDuringHour, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="7"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AverageLightningStrikeDistance, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="8"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AverageRelativeHumidity, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="9"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AverageBattery, StringFormat='{0:##0.00}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="10"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AverageIlluminance, StringFormat='{0:###,##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="11"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AverageUV, StringFormat='{0:#0.00}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="12"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AverageSolarRadiation, StringFormat='{0:#0.00}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="13"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding HoursBack, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AverageStationPressure, StringFormat='{0:#0.00}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>