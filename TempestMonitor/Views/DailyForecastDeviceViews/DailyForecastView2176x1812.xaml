<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:converters="clr-namespace:TempestMonitor.Views.Converters;assembly=TempestMonitor"
    xmlns:observables="clr-namespace:TempestMonitor.ViewModels.Observables;assembly=TempestMonitor"
    xmlns:viewModels="clr-namespace:TempestMonitor.ViewModels;assembly=TempestMonitor"
    x:DataType="viewModels:DailyForecastViewModel"
    x:Class="TempestMonitor.Views.DailyForecastDeviceViews.DailyForecastView2176x1812"
>
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:RowIndexToColorConverter x:Key="RowIndexToColorConverter" />
        </ResourceDictionary>
    </ContentView.Resources>
    <ScrollView Orientation="Both" BackgroundColor="{StaticResource PurpleVikings}">
        <VerticalStackLayout>
            <CollectionView
                ItemsSource="{Binding DailyForecasts}"
            >
                <CollectionView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="175"/>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="65"/>
                            <ColumnDefinition Width="195"/>
                            <ColumnDefinition Width="22"/>
                            <ColumnDefinition Width="85"/>
                            <ColumnDefinition Width="49"/>
                            <ColumnDefinition Width="44"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Text="High" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="1"
                            Text="Low" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="2"
                            Text="Conditions" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="3"
                            Text="DW" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="4"
                            Text="D" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="5"
                            Text=" Date" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="6"
                            Text="Sky Icon" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="7"
                            Text="M" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="8"
                            Text="Precip Icon" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="9"
                            Text="Pr %" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="10"
                            Text="PType" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="11"
                            Text="Rise" 
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="12"
                            Text="Set" 
                            HorizontalOptions="Center"
                        />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type observables:DailyObservable}">
                        <Grid
                            Margin="0,0,0,0"
                            Padding="0,0,0,0"
                        >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="175"/>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="65"/>
                                <ColumnDefinition Width="195"/>
                                <ColumnDefinition Width="22"/>
                                <ColumnDefinition Width="85"/>
                                <ColumnDefinition Width="49"/>
                                <ColumnDefinition Width="44"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AirTempHigh, StringFormat='{0:##0.00}'}" 
                               />
                            </Border>
                            <Border
                                Grid.Column="1"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AirTempLow, StringFormat='{0:##0.00}'}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="2"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Conditions}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="3"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding DayStartLocal, StringFormat='{0:ddd}'}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="4"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding DayNum}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="5"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding DayStartLocal, StringFormat='{0:MM/dd/yy}'}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="6"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Icon}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="7"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding MonthNumber}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="8"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding PrecipitationIcon}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="9"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding PrecipitationProbability, StringFormat='{0:##0.00}'}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="10"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding PrecipitationType}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="11"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Sunrise, StringFormat='{0:HH:mm}'}" 
                                />
                            </Border>
                            <Border
                                Grid.Column="12"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Sunset, StringFormat='{0:HH:mm}'}" 
                                />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
