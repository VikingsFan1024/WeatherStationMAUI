<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:converters="clr-namespace:TempestMonitor.Views.Converters;assembly=TempestMonitor"
    xmlns:observables="clr-namespace:TempestMonitor.ViewModels.Observables;assembly=TempestMonitor"
    xmlns:viewModels="clr-namespace:TempestMonitor.ViewModels;assembly=TempestMonitor"
    x:DataType="viewModels:HourlyForecastViewModel"
    x:Class="TempestMonitor.Views.HourlyForecastDeviceViews.HourlyForecastView2304x1440"
>
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:RowIndexToColorConverter x:Key="RowIndexToColorConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView Orientation="Both" BackgroundColor="{StaticResource PurpleVikings}">
        <VerticalStackLayout>
            <CollectionView
                ItemsSource="{Binding HourlyForecasts}"
            >
                <CollectionView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="295"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="122"/>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="66"/>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="55"/>
                            <ColumnDefinition Width="55"/>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="65"/>
                            <ColumnDefinition Width="32"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            TextColor="{StaticResource GoldVikings}"
                            Text="Temp" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="1"
                            TextColor="{StaticResource GoldVikings}"
                            Text="Conditions" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="2"
                            TextColor="{StaticResource GoldVikings}"
                            Text="FL" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="3"
                            TextColor="{StaticResource GoldVikings}"
                            Text="Icon" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="4"
                            TextColor="{StaticResource GoldVikings}"
                            Text="DW" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="5"
                            TextColor="{StaticResource GoldVikings}"
                            Text="D" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="6"
                            TextColor="{StaticResource GoldVikings}"
                            Text="Hr" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="7"
                            TextColor="{StaticResource GoldVikings}"
                            Text="Amt" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="8"
                            TextColor="{StaticResource GoldVikings}"
                            Text="P Icon" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="9"
                            TextColor="{StaticResource GoldVikings}"
                            Text="PC" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="10"
                            TextColor="{StaticResource GoldVikings}"
                            Text="PTyp" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="11"
                            TextColor="{StaticResource GoldVikings}"
                            Text="RH" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="12"
                            TextColor="{StaticResource GoldVikings}"
                            Text="SLP" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="13"
                            TextColor="{StaticResource GoldVikings}"
                            Text="SP" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="14"
                            TextColor="{StaticResource GoldVikings}"
                            Text="T" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="15"
                            TextColor="{StaticResource GoldVikings}"
                            Text="u" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="16"
                            TextColor="{StaticResource GoldVikings}"
                            Text="w" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="17"
                            TextColor="{StaticResource GoldVikings}"
                            Text="wd" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="18"
                            TextColor="{StaticResource GoldVikings}"
                            Text="WDC" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                        <Label
                            Grid.Column="19"
                            TextColor="{StaticResource GoldVikings}"
                            Text="SG" 
                            FontSize="Medium"
                            HorizontalOptions="Center"
                        />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type observables:HourlyObservable}">
                        <Grid
                                Margin="0,0,0,0"
                                Padding="0,0,0,0"
                            >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="295"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="122"/>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="66"/>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="65"/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding AirTemperature, StringFormat='{0:##0.00}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="1"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Conditions}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="2"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding FeelsLike, StringFormat='{0:##0.00}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="3"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Icon}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="4"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Time, StringFormat='{0:ddd}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="5"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding LocalDay, StringFormat='{0:##}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="6"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding LocalHour, StringFormat='{0:00}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="7"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Precipitation, StringFormat='{0:#0.00}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="8"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding PrecipitationIcon}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="9"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding PrecipitationProbability, StringFormat='{0:#0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="10"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding PrecipitationType}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="11"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding RelativeHumidity, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="12"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding SeaLevelPressure, StringFormat='{0:###0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="13"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding StationPressure, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="14"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding Time, StringFormat='{0:HH}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="15"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding UV, StringFormat='{0:0}'}"  
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="16"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding WindAvg, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="17"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="End"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding WindDirection, StringFormat='{0:##0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                            <Border
                                Grid.Column="18"
                                StrokeThickness="1"
                            >
                                <Label
                                    HorizontalOptions="Start"
                                    TextColor="{Binding RowNumber, Converter={StaticResource RowIndexToColorConverter}}" 
                                    Text="{Binding WindDirectionCardinal, StringFormat='{0}'}" 
                                    FontSize="Medium"
                                />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
